

<h4>@ViewBag.orderCount</h4>
<hr/>
<table class="table table-bordered">
    <thead>
        
        <th>OrderID</th>
    <th>OrderDate</th>
    <th>CustomerID</th>
    <th>EmployeeID</th>

    </thead>
    <tbody>
@foreach (var item in ViewBag.OrdersInHand)
{
    <tr>
        <td>@item.OrderID</td>
        <td>@item.OrderDate</td>
        <td>@item.CustomerID</td>
        <td>@item.EmpID</td>
        <td>@Html.ActionLink("Edit","EditOrder")</td>
                <td>@Html.ActionLink("Delete", "DeleteOrder")</td>
    </tr>
    
}
    </tbody>
</table>
<hr/>
<ul>
@foreach (var item in ViewBag.OrdersInHand)
{
        <li>
            @item.OrderID
            @item.OrderDate
            @item.CustomerID
            @item.EmpID
        </li>
}

</ul>






